<%- include("partials/header.ejs") %>

<!-- MODAL -->
<div id="modal-overlay">
    <div id="modal">
        <div class="modal-box-1">
            <i class="fas fa-desktop"></i>
            <h1>LFC</h1>
        </div>
        <form action="/auth/apply-email-home" method="POST" id="apply-form" class="modal-box-2">
            <div class="flex">
                <h1>APPLY TODAY!</h1>
                <i class="fas fa-times" id="close-modal-btn"></i>
            </div>
            <p>Send us your information and a staff member will contact you soon.</p>
            <input type="text" name="full_name" id="full-name" placeholder="Full name" maxlength="30" required>
            <input type="text" name="phone" id="phone" placeholder="Phone" maxlength="12" required>
            <input type="email" name="email" id="email" placeholder="Email" maxlength="100" required>
            <button type="submit" class="g-recaptcha" data-sitekey="6LfNj-keAAAAACbPznMW6DDIxOGjMpOB6IgCAU39"
                    data-callback="applyFormRequest">SUBMIT</button>
            <% if(typeof success !="undefined" && success) { %>
                <div class="alert-message-success">
                    <%= message %>
                </div>
            <% } else if(typeof success !="undefined" && !success) { %>
                <div class="alert-message-error">
                    <%= message %>
                </div>
            <% } %>
        </form>
    </div>
</div>

<!-- IMAGE CAROUSEL -->
