<%- include("partials/header.ejs") %>

<section id="login">
  <div class="container">
    <div class="subcontainer">
      <form action="/auth/login" method="POST" id="login-form">
        <div class="title-container">
          <h1>Login</h1>
        </div>
        <div class="email-container">
          <input type="text" id="email" name="email" placeholder="Email" maxlength="100" required>
        </div>
        <div class="password-container">
          <input type="password" id="password" name="password" placeholder="Password" maxlength="60" required>
        </div>
        <div class="show-password-container-login">
          <div>
            <input type="checkbox" id="show-password">
            <label for="show-password">Show password</label>
          </div>
          <div>
            <a href="/password-reset">Forgot Password?</a>
          </div>
        </div>
        <div class="login-btn-container">
          <button type="submit">LET'S GO</button>
        </div>
        <div>
          <p style="color: gray;">Not a member? <a href="/register">Register</a></p>
        </div>
        <% if(typeof success != "undefined" && !success) { %>
          <div class="alert-message-error">
            <%= message %>
          </div>
        <% } %>
      </form>
    </div>
  </div>
</section>

<script src="/js/script.js"></script>


<%- include("partials/footer.ejs") %>